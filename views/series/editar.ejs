
<%- include('../partials/header') %> 

<section id="series">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h2>Editar Série</h2>
      <form method="post">
        <div class="form-group">
            <label for="name">Nome da série</label>
            <input type="text" value="<%= serie.name %>" name="name"  class="form-control" id="InputName" aria-describedby="nameHelp" placeholder="Informe o nome">
            <small id="nameHelp" class="form-text text-muted">Nome da série a ser salva.</small>
          </div>
          <div class="form-group">
            <label for="status">Situação: </label>
            <select class="form-control" id="status" name="status">
                <% labels.forEach( label =>  { %>        
                    <option value="<%= label.id %>"  <%  if( label.id === serie.status ) { %> selected="selected" <% } %>><%= label.name %></option>
                <% }) %>
            </select>
          </div>
        <button class="btn btn-primary">Salvar</button>
      </form>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %> 
